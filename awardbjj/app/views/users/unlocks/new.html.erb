<section class="flex justify-center items-center m-10">
  <div class="p-10 rounded-xl bg-white shadow-lg">

    <h2 class="text-2xl font-bold pb-6">Resend unlock instructions</h2>

    <%= form_for(
      resource,
      as: resource_name,
      url: unlock_path(resource_name),
      data: { turbo: "false" },
      html: { method: :post, class: "grid gap-3"}
    ) do |f| %>

      <%= render "users/shared/error_messages", resource: resource %>

      <div>
        <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "w-full" %>
      </div>

      <%= recaptcha_tags %>

      <div class="mb-5">
        <%= f.submit "Resend", class: "cursor-pointer bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg transition duration-300"  %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</section>