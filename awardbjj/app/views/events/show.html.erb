<main>
  <%= link_to sanitize("&larr; Back to events"), events_path %>

  <h1 class="text-4xl"> <%= @event.name %></h1>
  <div>
    <h5> Event location: <%= @event.location %> </h5>
    <p> <%= @event.description %> </p>
    <h5> Starts at: <%= @event.start_at.to_formatted_s(:long) %> </h5>
    <h5> Ends at: <%= @event.end_at.to_formatted_s(:long) %> </h5>
  </div>
  ` 
  <% if @event.organizer == current_user %>
    <%= link_to "Edit", edit_event_path(@event), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Delete", event_path(@event), method: :delete, data: { confirm: "Are you sure?" }, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
</main>
