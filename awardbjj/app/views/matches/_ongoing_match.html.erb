<%= turbo_frame_tag match do %>
  <div class="p-4 border border-gray-300 rounded-lg shadow-md">

    <h3 class="text-center mb-4 font-medium capitalize"><%= match.status.humanize %></h3>

    <!-- TODO: start/stop timer with turbo_stream from controller -->
    <div class="bg-gray-200 rounded-lg p-4 font-bold mb-4 text-center"
      data-controller="timer" data-timer-time-value=<%= @match.time_remaining %> data-timer-started-value="<%= @match.timer_running %>">
      <p data-timer-target="time"><%= @match.time_remaining_minutes_and_seconds %></p>
    </div>

    <div class="grid sm:grid-cols-2 gap-6">
      <div class="text-center">
        <h3 class="text-lg font-medium mb-2"><%= match.competitor1_name %></h3>
        <p>Points: <%= match.points1 %></p>
        <p>Advantages: <%= match.advantages1 %></p>
        <p>Penalties: <%= match.penalties1 %></p>
      </div>
      <div class="text-center">
        <h3 class="text-lg font-medium mb-2"><%= match.competitor2_name %></h3>
        <p>Points: <%= match.points2 %></p>
        <p>Advantages: <%= match.advantages2 %></p>
        <p>Penalties: <%= match.penalties2 %></p>
      </div>
    </div>
  </div>
<% end %>
